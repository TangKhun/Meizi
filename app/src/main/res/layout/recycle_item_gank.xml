<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_gank_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="5dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/item_gank_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/item_gank_image"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/item_gank_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_gank_image"
        android:layout_toRightOf="@+id/item_gank_image"
        android:text="分类"/>

    <TextView
        android:id="@+id/item_gank_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_gank_image"
        android:layout_alignParentRight="true"
        android:text="2011/12/1"/>
</RelativeLayout>